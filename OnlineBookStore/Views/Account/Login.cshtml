@using BookStore.Models
@model LoginViewModel





<div class="bg-colored"></div>
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class=" col-lg-6">
        <div class="section bg-white p-0">
            <div class="card-header ">
                <div class="text-center mt-2 mb-1">
                    <h1>Sign In</h1>
                </div>
            </div>
            <div class="card-body  ">
                <div>
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "row", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <form id="form" role="form" class="row">
                            <div class="form-group col-12">
                                <div class="input-group input-group-merge input-group-alternative ">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                    </div>
                                    <input class="form-control" name="UserName" id="UserName" placeholder="User Name">

                                </div>
                            </div>
                            <div class="form-group col-12">
                                <div class="input-group input-group-merge input-group-alternative">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                    </div>
                                    <input class="form-control" name="Password" id="Password" placeholder="Password" type="password">
                                </div>
                            </div>
                            <div class="col-12 text-muted ">
                                <input type="checkbox" name="RememberMe" id="RememberMe" class="mr-1" value="remember-me"><span class="mr-3">
                                    Remember
                                    Me
                                </span>
                            </div>

                            <div class="col-12">
                                <small>Don't have an account?</small>
                                <a href="Register">Sign Up</a>
                            </div>
                            <div class=" col-12 text-center mt-3">
                                @*<button type="submit" class=" full-button ">Sign In</button>*@
                                <input type="submit" class="full-button" value="Sign In" />
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
