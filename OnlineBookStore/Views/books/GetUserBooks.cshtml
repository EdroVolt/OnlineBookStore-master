@model IEnumerable<BookStore.Models.book>
<div class="container mb-3 ">
    <div class="user-books-details px-3 mt-3">
        <div class="row ">
            <!-- My books -->
            <div id="my-books" class="col-12 col-lg-4 bg-white p-0 m-0">
                <h2 class="text-center header">My Previous Books</h2>
                @foreach (var item in Model)
                {

                    <!-- User books section -->

                    <div class="container mt-lg-3">
                        <div class="responsive d-block justify-content-between">
                            <div class="product">
                                <div class="product-img">
                                    <img class="img-fluid" src="~/Uploads/@Html.DisplayFor(modelItem => item.book_image)" alt="">
                                </div>
                                <div class="product-body">
                                    <p class="product-category">
                                        @Html.DisplayFor(modelItem => item.category.category_name)
                                    </p>
                                    <h3 class="product-name">
                                        @{var a = Html.DisplayFor(modelItem => item.book_title).ToString();}
                                        @Html.ActionLink(a, "Edit", new { id = item.Id })
                                    </h3>
                                    <h4 class="product-price">@Html.DisplayFor(modelItem => item.book_cost) $</h4>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<a class="btn-outline-danger">
    @Html.ActionLink("Create New Book", "Create")
</a> 
   
