@model IEnumerable<BookStore.Models.book>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.category.category_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user.user_address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.no_of_books)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_description)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.book_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_weight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.book_width)
        </th>
        @*<th></th>*@
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.category.category_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.user_address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.no_of_books)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_description)
        </td>
       
        <td>
            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.book_image)"
                 class="thumbnail"
                 style="width:48px;height:48px;" />      
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_weight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.book_width)
        </td>
